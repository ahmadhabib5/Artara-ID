<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.artara_id">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="0.android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_no_bg"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_no_bg"
        android:supportsRtl="true"
        android:theme="@style/Theme.ArtaraID.FullScreen">
        <activity
            android:name=".feature.ingredients.IngredientsActivity"
            android:exported="false"
            android:screenOrientation="locked"/>
        <activity
            android:name=".feature.history.HistoryActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".feature.register.RegisterActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".feature.login.LoginActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".feature.predict.PredictActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".feature.about.AboutActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".feature.home.HomeActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".feature.home.StartActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".feature.splash.SplashActivity"
            android:exported="true"
            android:screenOrientation="locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>